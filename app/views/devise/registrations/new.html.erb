<div class="container">


      <div class="form-signin">
        <h2 class="form-signin-heading">Sign Up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
     

     
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>

      <div class="form-group">
        <%= f.label :name %>
         <%= f.text_field :name, autofocus: true, class: "form-control" %>
       </div>

        <div class="form-group">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control",:autofocus => true %></div>
        </div>

        <div class="form-group">
      <div><%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control",:autofocus => true %></div>
    </div>

      <div class="form-group">
      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control",:autofocus => true %></div>
    </div>

      <%= f.submit "Sign Up", class: "btn btn-6 btn-6e" %>
      <%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name),  class: "btn btn-6 btn-6e" %>
<% end -%>
    <% end %>
</div>
<div class = "devise">
    <%= render "devise/shared/links" %>
</div>
  </div>
