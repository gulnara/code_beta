<div class="container">
  <h2 class="form-signin-heading">Please sign up</h2>
    <div class="form-group">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <div><%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control",:autofocus => true %></div>
        </div>
        <div class="form-group">
          <div><%= f.label :password %><br />
          <%= f.password_field :password, class: "form-control",:autofocus => true %></div>
        </div>
        <div class="form-group">
          <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: "form-control",:autofocus => true %></div>
        </div>
        <div><%= f.submit "Sign Up", class: "btn btn-6 btn-6e" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
</div>