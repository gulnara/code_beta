
        <div class="content">
 
          <h1>All Users</h1>
          

          
             
            <% @users.each do |user| %>
      
                <li><%= link_to user.name, user %>
                  <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
                <% if current_user.try(:admin?) %> 
                <%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %>

              </li>
                <% end %>
            <% end %>

          </div>
       