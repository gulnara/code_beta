<div id="container" class="container">  
	<nav id="bt-menu" class="bt-menu">
		<a href="#" class="bt-menu-trigger"><span>Menu</span></a>
		<%= render "layouts/header" %>
	</nav>
	<div class="bb-custom-wrapper">
		<div id="bb-bookblock" class="bb-bookblock">
			<div class="bb-item" id="item1">
				<div class="content">
    			<div class="scroller">
					<p id="notice"><%= notice %></p>
					<p>
					  <strong>Title:</strong>
					  <%= @problem.title %>
					</p>

					<p>
					  <strong>Description:</strong>
					  <%= @problem.description %>
					</p>

					<p>
					  <strong>Source</strong>
					  <%= link_to @problem.source, @problem.source %>
					</p>

					<p>
					  <strong>Solutions</strong>
					  <table>
						  <thead>
						    <tr>
						      <th>Answer</th>
						      <th>Language</th>
						      <th>User</th>
						      <th></th>
						      <th></th>
						      <th></th>
						    </tr>
						  </thead>
						  <tbody>
						    <% @problem.solutions.each do |solution| %>
						      <tr>
						        <td><%= solution.answer %></td>
						       	<td><%=  solution.language %></p>
						        <td><%= link_to solution.user.name,  user_path(solution.user.id) %></td>
						        <% if user_signed_in? %>
						        <td><%= link_to 'Show', problem_solution_path(@problem, solution) %></td>
						      
							        <% if current_user.try(:admin?) or solution.user == current_user %>
							          <td><%= link_to 'Edit', edit_problem_solution_path(@problem, solution) %></td>
							          <td><%= link_to 'Destroy', problem_solution_path(@problem, solution), method: :delete, data: { confirm: 'Are you sure?' } %></td>
							        <% end %>
							    <% end %>
						      </tr>
						    <% end %>
						  </tbody>
						 </table>
					</p>
					<% if user_signed_in? %>
					
					<%= link_to 'Submit a Solution', new_problem_solution_path(@problem) %> |
		

					<% if current_user.try(:admin?) or @problem.user_id == current_user.id  %>
						<%= link_to 'Edit', edit_problem_path(@problem) %> |
					<% end %>
				<% end %>
					<%= link_to 'Back', problems_path %>
					<%= render 'layouts/disqus' %>
    			</div>
				</div>
			</div>
		</div>
	</div>  
</div>
