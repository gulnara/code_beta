
<div class="content">
  <h1>All Problems</h1>

  <%= link_to 'New Problem', new_problem_path, class: "btn btn-6 btn-6c" %>
  <div id="problems">
    <table class="table-striped">
  
      <tr>
        <th ><%= sortable 'title' %></th>
        <th ><%= sortable 'solutions_number', 'Solutions' %></th>
        <th ><%= sortable 'source_title', 'Source' %></th>
        <th ><%= sortable 'created_at', 'Created' %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>  
      <div class="problem">
      <%= render @problems %>
      </div>
    </table>
  </div>

<div class="center">
 <%= will_paginate @problems  %>
</div>

</div>
