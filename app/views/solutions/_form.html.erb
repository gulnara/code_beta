<%= form_for([@problem, @solution ]) do |f| %>
  <% if @solution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
      <% @solution.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "form-control" %>
  </div>

    <%= f.label :answer %><br>
    <i>( you can just paste the code from your text editor & don't forget to pick the right language)</i>
    <%= f.text_area :answer, rows: 20, class: "text_area"%>


  <div class="form-group">
    <%= f.label :language %><br>
    <%= f.select :language, options_for_select([["Ruby", "ruby"], ["Python", "python"],["Clojure", "clojure"],["Scala", "scala"],["C", "c"],["C#", "c#"],["Java", "java"], ["JavaScript", "javascript"], ["CoffeeScript", "coffeescript"],["PHP", "php"], ["CSS", "css"], ["HTML", "html"]]) %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-6 btn-6c"%>
  </div>
<% end %>
